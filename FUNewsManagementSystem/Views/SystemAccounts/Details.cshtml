@model BusinessObjects.Models.SystemAccount
@{
    ViewData["Title"] = "Chi Tiết Tài Khoản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .details-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-title {
        color: #1f2937;
        font-size: 1.875rem;
        font-weight: 600;
        margin: 0;
    }

    .info-card {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-row {
        display: flex;
        padding: 1rem;
        border-bottom: 1px solid #e5e7eb;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-row:nth-child(even) {
        background: #ffffff;
        border-radius: 8px;
    }

    .info-label {
        width: 200px;
        color: #4b5563;
        font-weight: 500;
    }

    .info-value {
        flex: 1;
        color: #1f2937;
    }

    .role-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .role-admin {
        background: #fef3c7;
        color: #92400e;
    }

    .role-staff {
        background: #dcfce7;
        color: #166534;
    }

    .role-lecturer {
        background: #e0e7ff;
        color: #3730a3;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #4f46e5;
        color: white;
    }

    .btn-edit:hover {
        background: #4338ca;
        color: white;
        transform: translateY(-1px);
        box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.2);
    }

    .btn-back {
        background: #f3f4f6;
        color: #374151;
    }

    .btn-back:hover {
        background: #e5e7eb;
        color: #1f2937;
    }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }
</style>

<div class="details-container fade-in">
    <div class="page-header">
        <h1 class="page-title">Chi Tiết Tài Khoản</h1>
    </div>

    <div class="info-card">
        <div class="info-row">
            <div class="info-label">Tên Tài Khoản</div>
            <div class="info-value">@Html.DisplayFor(model => model.AccountName)</div>
        </div>

        <div class="info-row">
            <div class="info-label">Email</div>
            <div class="info-value">@Html.DisplayFor(model => model.AccountEmail)</div>
        </div>

        <div class="info-row">
            <div class="info-label">Vai Trò</div>
            <div class="info-value">
                <span class="role-badge @(Model.AccountRole == 0 ? "role-admin" : 
                                        Model.AccountRole == 1 ? "role-staff" : "role-lecturer")">
                    @(Model.AccountRole == 0 ? "Admin" : 
                      Model.AccountRole == 1 ? "Staff" : "Lecturer")
                </span>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.AccountId" class="btn-action btn-edit">
            <i class="fas fa-edit"></i>
            Chỉnh Sửa
        </a>
        <a asp-action="Index" class="btn-action btn-back">
            <i class="fas fa-arrow-left"></i>
            Quay Lại
        </a>
    </div>
</div>
