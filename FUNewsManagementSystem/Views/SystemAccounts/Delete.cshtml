@model BusinessObjects.Models.SystemAccount

@{
    ViewData["Title"] = "Xóa Tài Khoản";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    .delete-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    .warning-header {
        background: #fee2e2;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border-left: 4px solid #ef4444;
    }

    .warning-title {
        color: #991b1b;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .warning-text {
        color: #7f1d1d;
        margin: 0;
    }

    .info-section {
        background: #f8fafc;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-title {
        color: #1f2937;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .info-row {
        display: flex;
        margin-bottom: 1rem;
        border-bottom: 1px solid #e5e7eb;
        padding-bottom: 1rem;
    }

    .info-row:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .info-label {
        width: 200px;
        color: #4b5563;
        font-weight: 500;
    }

    .info-value {
        flex: 1;
        color: #1f2937;
    }

    .role-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .role-admin {
        background: #fef3c7;
        color: #92400e;
    }

    .role-staff {
        background: #dcfce7;
        color: #166534;
    }

    .role-lecturer {
        background: #e0e7ff;
        color: #3730a3;
    }

    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-delete {
        background: #ef4444;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-delete:hover {
        background: #dc2626;
        color: white;
        transform: translateY(-1px);
        box-shadow: 0 4px 6px -1px rgba(239, 68, 68, 0.2);
    }

    .btn-cancel {
        background: #f3f4f6;
        color: #374151;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-cancel:hover {
        background: #e5e7eb;
        color: #1f2937;
    }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }
</style>

<div class="delete-container fade-in">
    <div class="warning-header">
        <div class="warning-title">
            <i class="fas fa-exclamation-triangle"></i>
            Xác Nhận Xóa
        </div>
        <p class="warning-text">
            Bạn có chắc chắn muốn xóa tài khoản này? Hành động này không thể hoàn tác.
        </p>
    </div>

    <div class="info-section">
        <h4 class="info-title">Thông Tin Tài Khoản</h4>

        <div class="info-row">
            <div class="info-label">Tên Tài Khoản</div>
            <div class="info-value">@Html.DisplayFor(model => model.AccountName)</div>
        </div>

        <div class="info-row">
            <div class="info-label">Email</div>
            <div class="info-value">@Html.DisplayFor(model => model.AccountEmail)</div>
        </div>

        <div class="info-row">
            <div class="info-label">Vai Trò</div>
            <div class="info-value">
                <span class="role-badge @(Model.AccountRole == 0 ? "role-admin" : Model.AccountRole == 1 ? "role-staff" : "role-lecturer")">
                    @(Model.AccountRole == 0 ? "Admin" : Model.AccountRole == 1 ? "Staff" : "Lecturer")
                </span>
            </div>
        </div>
    </div>

    <div class="actions">
        <form asp-action="Delete" method="post" style="display: inline;">
            <input type="hidden" asp-for="AccountId" />
            <button type="submit" class="btn-delete">
                <i class="fas fa-trash"></i>
                Xác Nhận Xóa
            </button>
        </form>
        <a asp-action="Index" class="btn-cancel">
            <i class="fas fa-arrow-left"></i>
            Quay Lại
        </a>
    </div>
</div>
