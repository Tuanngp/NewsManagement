@model BusinessObjects.Models.SystemAccount

@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <h2 class="my-4">Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="UpdateProfile" method="post" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AccountId" />
                <input type="hidden" asp-for="AccountRole" />

                <div class="form-group mb-3">
                    <label asp-for="AccountName" class="control-label">Name</label>
                    <input asp-for="AccountName" class="form-control" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AccountEmail" class="control-label">Email</label>
                    <input asp-for="AccountEmail" class="form-control" type="email" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AccountPassword" class="control-label">New Password</label>
                    <input asp-for="AccountPassword" class="form-control" type="password" />
                    <span asp-validation-for="AccountPassword" class="text-danger"></span>
                    <small class="form-text text-muted">Leave blank to keep current password</small>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}