@model BusinessObjects.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .delete-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    .warning-header {
        background: #fee2e2;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border-left: 4px solid #ef4444;
    }

    .warning-title {
        color: #991b1b;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .warning-text {
        color: #7f1d1d;
        margin: 0;
    }

    .info-section {
        background: #f8fafc;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-title {
        color: #1f2937;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .info-row {
        display: flex;
        margin-bottom: 1rem;
        border-bottom: 1px solid #e5e7eb;
        padding-bottom: 1rem;
    }

        .info-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .info-label {
        width: 200px;
        color: #4b5563;
        font-weight: 500;
    }

    .info-value {
        flex: 1;
        color: #1f2937;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .status-active {
        background: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background: #fee2e2;
        color: #991b1b;
    }

    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-delete {
        background: #ef4444;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background: #dc2626;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px -1px rgba(239, 68, 68, 0.2);
        }

    .btn-cancel {
        background: #f3f4f6;
        color: #374151;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        border: none;
        font-weight: 500;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #e5e7eb;
            color: #1f2937;
        }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }
</style>

<div class="delete-container fade-in">
    <div class="warning-header">
        <div class="warning-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            Confirm Deletion
        </div>
        <p class="warning-text">
            Are you sure you want to delete this category? This action cannot be undone.
        </p>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="info-section">
        <h4 class="info-title">Category Details</h4>

        <div class="info-row">
            <div class="info-label">Category Name</div>
            <div class="info-value">@Model.CategoryName</div>
        </div>

        <div class="info-row">
            <div class="info-label">Description</div>
            <div class="info-value">@Model.CategoryDesciption</div>
        </div>

        <div class="info-row">
            <div class="info-label">Status</div>
            <div class="info-value">
                <span class="status-badge @(Model.IsActive ?? false ? "status-active" : "status-inactive")">
                    @(Model.IsActive ?? false ? "Active" : "Inactive")
                </span>
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">Parent Category</div>
            <div class="info-value">
                @(Model.ParentCategory?.CategoryDesciption ?? "None")
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <div class="actions">
            <button type="submit" class="btn-delete">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete Category
            </button>
            <a asp-action="Index" class="btn-cancel">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Cancel
            </a>
        </div>
    </form>
</div>