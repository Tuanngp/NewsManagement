@model BusinessObjects.Models.Category
@{
    ViewData["Title"] = "Category Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .details-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-title {
        color: #1f2937;
        font-size: 1.875rem;
        font-weight: 600;
        margin: 0;
    }

    .info-card {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-row {
        display: flex;
        padding: 1rem;
        border-bottom: 1px solid #e5e7eb;
    }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-row:nth-child(even) {
            background: #ffffff;
            border-radius: 8px;
        }

    .info-label {
        width: 200px;
        color: #4b5563;
        font-weight: 500;
    }

    .info-value {
        flex: 1;
        color: #1f2937;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .status-active {
        background: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background: #fee2e2;
        color: #991b1b;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background: #4f46e5;
        color: white;
    }

        .btn-edit:hover {
            background: #4338ca;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px -1px rgba(79, 70, 229, 0.2);
        }

    .btn-back {
        background: #f3f4f6;
        color: #374151;
    }

        .btn-back:hover {
            background: #e5e7eb;
            color: #1f2937;
        }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }
</style>

<div class="details-container fade-in">
    <div class="page-header">
        <h1 class="page-title">Category Details</h1>
    </div>

    <div class="info-card">
        <div class="info-row">
            <div class="info-label">Category Name</div>
            <div class="info-value">@Model.CategoryName</div>
        </div>

        <div class="info-row">
            <div class="info-label">Description</div>
            <div class="info-value">@Model.CategoryDesciption</div>
        </div>

        <div class="info-row">
            <div class="info-label">Status</div>
            <div class="info-value">
                <span class="status-badge @(Model.IsActive ?? false ? "status-active" : "status-inactive")">
                    @(Model.IsActive ?? false ? "Active" : "Inactive")
                </span>
            </div>
        </div>

        <div class="info-row">
            <div class="info-label">Parent Category</div>
            <div class="info-value">
                @(Model.ParentCategory?.CategoryDesciption ?? "None")
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn-action btn-edit">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
        </a>
        <a asp-action="Index" class="btn-action btn-back">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to List
        </a>
    </div>
</div>